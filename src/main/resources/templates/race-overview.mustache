{{>layout/header}}

<!-- nav bar -->
<nav class="navbar fixed-top navbar-expand-md navbar-light bg-white">
    <div class="container-xxl">
        <a href="/" class="navbar-brand">
                <span class="fw-bold text-secondary">
                    HabitRacer
                </span>
        </a>
        <!-- Toggle button for mobile nav -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- navbar links -->
        <div class="collapse navbar-collapse justify-content-end align-center" id="main-nav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/#races">Your Races</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#contact">Get in Touch</a>
                </li>
                <li class="nav-item ms-2 d-none d-md-inline">
                    <a class="btn btn-secondary" href="/logout"><i class="bi bi-person-circle"></i> Log-out</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="col-md-12">
    <div class="row justify-content-between">
        <div class="col-md-6">
            {{#userName}}
                Logged in as: <span id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
            {{/userName}}
        </div>
        <div class="col-md-6 text-right">
            <h3><a href="/">HabitRacer</a></h3>
        </div>
    </div>
    <div class="col-md-12 text-center">
        <h1>{{race.raceName}}</h1>
        <h3>Wager: {{race.wager}}</h3>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h3>Have you completed your habit today?</h3>
            <a href="/race/{{race.id}}/posts/save" role="button" class="btn btn-dark">YES</a>
            <button type="button" class="btn btn-light" id="btn-encouragement">NO</button>
        </div>
    </div>
    <br>
    <!--  Reminder of Habits to build  -->
    <div class="row">
        <div class="col-md-6">
            <h4>‚ö° Habits to build ‚ö°</h4>
            üî• {{fstUserName}} ‚û°Ô∏è {{race.fstUserHabit}}
            <br>
            üî• {{sndUserName}} ‚û°Ô∏è {{sndHabit}}
            <input type="hidden" id="raceId" value="{{race.id}}">
        </div>
    </div>


    <!--  Table displaying progress  -->
    <div class="row justify-content-around">
        <div class="col-md-5">
            <table class="table table-horizontal table-bordered table-striped text-center">
                <thead class="thead-strong">
                <tr>
                    <th>{{fstUserName}}</th>
                </tr>
                </thead>
                <tbody id="tbody">
                {{#postsUser1}}
                    <tr>
                        <td><a href="/posts/update/{{id}}">{{date}}</a>‚úÖ</td>
<!--                        should i make uri include race? idk-->
                    </tr>
                {{/postsUser1}}
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <table class="table table-horizontal table-bordered table-striped text-center">
                <thead class="thead-strong">
                <tr>
                    <th>{{sndUserName}}</th>
                </tr>
                </thead>
                <tbody id="tbody">
                {{#postsUser2}}
                    <tr>
                        <td><a href="/posts/update/{{id}}">{{date}}</a>‚úÖ</td>
                    </tr>
                {{/postsUser2}}
                </tbody>
            </table>
        </div>
    </div>
</div>


{{>layout/footer}}