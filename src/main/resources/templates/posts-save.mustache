{{>layout/header}}

<h1>Record your success!</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" class="form-control" value="{{today}}">
            </div>
            <div class="form-group">
                <label for="comment">Comment</label>
                <textarea class="form-control" id="comment" placeholder="Write a message to your competitor!"></textarea>
            </div>
            <a href="/race/{{raceId}}" role="button" class="btn btn-secondary">Cancel</a>
            <button type="button" class="btn btn-primary" id="btn-save">Save</button>
            <input type="hidden" id="userId" value="{{userId}}">
            <input type="hidden" id="raceId" value="{{raceId}}">
        </form>
    </div>
</div>

{{>layout/footer}}