{{>layout/header}}

<div class="col-md-12 text-center">
    <h1>HabitRacer</h1>
</div>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            {{#userName}}
                Logged in as: <span id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
            {{/userName}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h3>Let's get racing!</h3>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <a href="/race/save" class="btn btn-success active" role="button">Start a Race</a>
            <a href="/race/join" class="btn btn-info active" role="button">Join a Race</a>
<!--            <a href="/race/update" class="btn btn-success active" role="button">Join a Race</a>-->
            <!--     second button doesn't work but its probably not gonna be included in final version anyways      -->
        </div>
    </div>
    <br>
    <h2>Your races:</h2>
    <!--  Table displaying progress  -->
    <div class="row justify-content-around">
        <div class="col-md-5">
            <table class="table table-horizontal table-bordered table-striped text-center">
                <thead class="thead-strong">
                <tr>
                    <th>Ongoing Races</th>
                    <th>RACEID</th>
                </tr>
                </thead>
                <tbody id="tbody">
                {{#raceList}}
                    <tr>
                        <td><a href="/race/{{id}}">{{raceName}}</a>ðŸ”¥</td>
                        <td>{{id}}</td>
                    </tr>
                {{/raceList}}
                </tbody>
            </table>
        </div>
    </div>
</div>


{{>layout/footer}}